{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Booking App",
            "type": "shell",
            "command": "java",
            "args": [
                "-cp",
                "bin;lib/sqlite-jdbc.jar",
                "App"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Compile Java",
            "type": "shell",
            "command": "javac",
            "args": [
                "-cp",
                "lib/sqlite-jdbc.jar",
                "-d",
                "bin",
                "src/*.java"
            ],
            "group": "build",
            "problemMatcher": ["$javac"]
        }
    ]
}
